{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"lib": ["ESNext", "DOM"],
		"jsx": "react-jsx",
		"strict": true,
		"skipLibCheck": true,
		"noUncheckedIndexedAccess": true,
		"types": ["vite/client"],
		"paths": {
			"~/*": ["./src/*"]
		}
	},
	"include": ["src", "convex"],
	"exclude": ["node_modules", "dist"]
}
