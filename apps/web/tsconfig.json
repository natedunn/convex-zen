{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"lib": ["ESNext", "DOM"],
		"jsx": "react-jsx",
		"strict": true,
		"skipLibCheck": true,
		"noUncheckedIndexedAccess": true,
		"types": ["vite/client"],
		"paths": {
			"~/*": ["./src/*"],
			"@convex-zen/auth": ["../../packages/convex-auth/src/client/index.ts"],
			"@convex-zen/auth/plugins/admin": ["../../packages/convex-auth/src/client/plugins/admin.ts"],
			"@convex-zen/auth/convex.config": ["../../packages/convex-auth/src/component/convex.config.ts"]
		}
	},
	"include": ["src", "convex"],
	"exclude": ["node_modules", "dist"]
}
